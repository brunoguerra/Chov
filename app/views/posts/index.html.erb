<h1>Posts</h1>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>
          #
        </th>
        <th>
          Date
        </th>
        <th>
          User
        </th>
        <th>
          Rationale
        </th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <th>
          <%= post.id %> 
        </th>
        <th>
          <%= post.date %>
        </th>
        <th>
          <%= post.user.last_name %>
        </th>
        <th>
          <%= truncate(post.rationale) %>
        </th>
      </tr>
    <% end %>
    </tbody>
  </table>
